#ifdef GL_FRAGMENT_PRECISION_HIGH
precision highp float;
#else
precision mediump float;
#endif
precision mediump int;

uniform ivec2 window_size;


void main() {
  float red = gl_FragCoord.x / float(window_size.x);
  float green = gl_FragCoord.y / float(window_size.y);
  gl_FragColor = vec4( red , green, cos(gl_FragCoord.x), 1);
}
